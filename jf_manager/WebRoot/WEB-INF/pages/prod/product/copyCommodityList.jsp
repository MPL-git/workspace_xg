<script type="text/javascript">
	var submitFlag = true;
	$(function(){		
		$.metadata.setType("attr", "validate");
		$("#form1").validate({
	        errorPlacement: function (lable, element) {  
	        	var elementType=$(element).attr("type");
	        	if('radio'==elementType) {
	        		var radioName=$(element).attr("name");
	        		$("input[type=radio][name="+radioName+"]:last").parent("span").ligerTip({
						content : lable.html(),width: 100
					});
	        	}else {
	        		$(element).ligerTip({
						content : lable.html(),width: 100
					});
	        	}
	        	$(".l-verify-tip-corner").css("z-index", "1001");
	        	$(".l-verify-tip-content").css("z-index", "1000");
	        },
	        success: function (lable,element) {
	            lable.ligerHideTip();
	            lable.remove();
	        },
	        submitHandler: function(form) {
	        	if(submitFlag){
	        		if($('#copyMore').is(":checked")){
	        			$('#copyMoreTag').val(1);
					}
	        		submitFlag = false;
	        		form.submit();
	        		$.ligerDialog.waitting('商品正在复制中,请稍候...');
	        	}
	        }
	    }); 
		
	});

</script>

</head>
	<body style="margin: 10px; ">
	<form name="form1" class="form1" method="post" id="form1" action="${pageContext.request.contextPath}/product/copycommoditydata.shtml" >
		<input type="hidden" id="id" name="id" value="${id}"/>
		<input type="hidden" id="brandId" name="brandId" value="${brandId}"/>
		<input type="hidden" id="copyMoreTag" name="copyMoreTag" value="0">
		<table class="gridtable">
			<tr>
            	<td class="title" width="20%">目的商家序号<span class="required">*</span></td>
				<td align="left" class="l-table-edit-td" >
					<input style="width: 230px;" type="text" id="mchtCode" name="mchtCode" value="" validate="{required:true,maxlength:100}" />
				</td>
           	</tr>
			<tr>
            	<td class="title" width="20%">操作</td>
				<td align="left" class="l-table-edit-td" >
					<input type="submit" class="l-button l-button-submit" value="下一步" /> 
				</td>
           	</tr>
		</table>
		<br>
		<c:if test="${role142}">
			<div style="display: flex;align-items: center;">
				<input type="checkbox" id="copyMore" checked/>同时复制原商品的权重、评论及销量
			</div>
		</c:if>
	</form>
